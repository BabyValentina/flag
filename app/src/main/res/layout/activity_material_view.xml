<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/title_bar_color">

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/fanhui"
            />

        <TextView
            android:id="@+id/follow_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:drawablePadding="5dp"
            android:text="个人资料"
            android:textColor="@color/title_text_color"
            android:textSize="18.0sp"/>
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/title_bar"
        android:background="@color/color_ac"
        ></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view">

        <RelativeLayout
            android:id="@+id/rel_touxiang"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >

            <TextView
                android:id="@+id/tv_touxiang"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="头像"
                android:textColor="@color/text_content_black"
                android:textSize="14sp"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/head"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/image"
                android:src="@drawable/icon"/>

            <ImageView
                android:id="@+id/image"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/common_icon_arrow"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rel_touxiang"
            >

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="用户名"
                android:textColor="@color/text_content_black"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/image_1"
                android:maxWidth="150dp"
                android:singleLine="true"
                android:text="丸子君君"/>

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/youjiantou"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_sex"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rel_username"
            >

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="性别"
                android:textColor="@color/text_content_black"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_sexover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/image_3"
                android:text="女"/>

            <ImageView
                android:id="@+id/image_3"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/youjiantou"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_sign"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rel_sex"
            >

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="个性签名"
                android:textColor="@color/text_content_black"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_sgin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/image_2"
                android:maxWidth="150dp"
                android:singleLine="true"
                android:text="有"/>

            <ImageView
                android:id="@+id/image_2"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/youjiantou"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>