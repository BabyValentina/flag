<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/cra_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/back_img_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:src="@drawable/fanhui"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:id="@+id/current_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布动态"
            android:layout_centerInParent="true"
            android:textColor="#111111"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/send_msg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="发布"
            android:padding="10dp"
            android:textColor="#111111"
            android:textSize="14sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#cccccc"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/dynamic_layout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#ffffff"
            android:paddingTop="20dp"
            android:layout_height="wrap_content">



            <EditText
                android:layout_width="match_parent"
                android:hint="发布最近新动态"
                android:paddingTop="5dp"
                android:textColor="#111111"
                android:maxLength="500"
                android:background="@null"
                android:textColorHint="#575757"
                android:gravity="top"
                android:height="120dp"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:id="@+id/flag_content"/>


                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/recycler_view"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            <View
                android:layout_width="match_parent"
                android:background="#eeeeee"
                android:layout_marginTop="10dp"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/guanlian_haoyou_tv"
                android:layout_width="match_parent"
                android:text="@string/haoyou"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="#111111"
                android:layout_height="40dp"
                android:drawableRight="@drawable/youjiantou"
                />
            <View
                android:layout_width="match_parent"
                android:background="#eeeeee"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/radio_layout"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/btnIsChoosed"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/radio"
                    android:button="@null"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:text="关联Flag"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="#111111"
                    android:layout_height="40dp"
                    />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>



    <!--  </LinearLayout> -->

</LinearLayout>