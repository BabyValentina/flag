<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/origin_weibo_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/timeline_feedcard_retweet_background_auto"
    android:clickable="true"
    android:orientation="vertical">

    <include layout="@layout/home_weiboitem_titlebar" />

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="120dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/bord_shape"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/text_content_black"
                android:paddingTop="12dp"
                android:ellipsize="end"
                android:textSize="@dimen/size_18"
                android:lineSpacingExtra="2dp"
                android:maxLines="10"
                android:text="每天开心快乐的生活市我们每个人追求的目标，有人孜孜不倦，苦苦追寻任然找不到快乐每天开心快乐的生活市我们每个人追求的目标，有人孜孜不倦，苦苦追寻任然找不到快乐每天开心快乐的生活市我们每个人追求的目标，有人孜孜不倦，苦苦追寻任然找不到快乐"
                android:layout_height="wrap_content"/>



        </LinearLayout>
        <com.longke.flag.view.SquareImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/nihaohuai"
            android:layout_height="120dp">

        </com.longke.flag.view.SquareImageView>
    </LinearLayout>



    <include layout="@layout/mainfragment_weiboitem_bottombar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#e6e6e6"
        android:layout_height="4dp"/>
</LinearLayout>


